{
  "name": "ttp-lab-1",
  "version": "1.0.0",
  "main": "index.ts",
  "repository": "git@github.com:junkkerrigan/ttp-lab-1.git",
  "author": "Andrew Pavlenko <paavlenko.andrew@gmail.com>",
  "license": "MIT",
  "scripts": {
    "open:page": "open 'http://localhost:8080'",
    "watch:server": "webpack --watch --config webpack.config.server.js",
    "watch:client": "webpack --watch --config webpack.config.client.js",
    "tab:watch:server": "ttab -t 'Watch server' npm run watch:server",
    "tab:watch:client": "ttab -t 'Watch client' npm run watch:client",
    "watch": "run-s tab:watch:client tab:watch:server open:page",
    "build:server": "webpack --config webpack.config.server.js",
    "build:client": "webpack --config webpack.config.client.js",
    "build": "npm run build:server && npm run build:client",
    "serve": "node ./dist/server.bundle.js",
    "prestart": "rm -rf ./dist && npm run build",
    "start": "run-s open:page serve"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "nodemon-webpack-plugin": "^4.3.1",
    "pg": "^7.18.2",
    "pg-hstore": "^2.3.3",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-router-dom": "^5.1.2",
    "sequelize": "^5.21.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.3",
    "@types/node": "^13.7.7",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@types/react-router-dom": "^5.1.3",
    "@types/sequelize": "^4.28.8",
    "clean-webpack-plugin": "^3.0.0",
    "html-webpack-plugin": "^3.2.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^6.2.1",
    "ttab": "^0.6.1",
    "typescript": "^3.8.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-livereload-plugin": "^2.3.0",
    "webpack-node-externals": "^1.7.2"
  }
}
